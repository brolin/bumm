extends ../layout

block content
  h2.display-data Delete <%= model.singularCapitalized %>?
            
  table.table.table-bordered
    tr
      th Property
      th Value
<% for(var i in properties) { -%>
        tr
          td <%=properties[i].nameCapitalized %>
          td= display(<%=model.singular%>.<%=properties[i].name %>)
<% } %>

  form#<%=model.singular%>-form.form-horizontal(action="/<%=model.plural%>/" + <%=model.singular%>._id + "/delete", method="POST")
    .form-actions
      a.btn.btn-warning(href="/<%=model.plural%>") Back
      | 
      input.btn.btn-danger(type="submit", value="Delete")
